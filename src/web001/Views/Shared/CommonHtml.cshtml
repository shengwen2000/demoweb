@{
    Layout = null;
}

<script id="DialogMessageCtrl" type="text/ng-template">
    <div ng-controller="DialogMessageCtrl as ctl">
        <div id="dlg_DialogMessageCtrl" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">{{ctl.Title}}</h4>
                    </div>
                    <div class="modal-body">
                        <p>{{ctl.Message}}</p>                        
                    </div>
                    <div class="modal-footer">
                        <button ng-show="ctl.No" type="button" class="btn btn-default"  ng-click="ctl.clickNo()">{{ctl.No}}</button>
                        <button ng-show="ctl.Yes" type="button" class="btn btn-primary" ng-click="ctl.clickYes()">{{ctl.Yes}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
